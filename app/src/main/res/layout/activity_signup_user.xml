<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >



    <ImageView
        android:id="@+id/kbv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/photo2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b3030603">


    </View>

    <android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/userlogin_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:weightSum="7"
        app:theme="@style/LoginTheme">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:padding="4dp"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-light"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/logo_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginBottom="8dp"
                android:layout_centerHorizontal="true">


                <ImageView
                    android:id="@+id/basket"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:padding="8dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ord_basket"

                    />

                <ImageView
                    android:id="@+id/ord"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@id/basket"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/icon_ord"

                    />
            </RelativeLayout>





        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_weight="4">


            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/user_cred_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/user_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="@color/white"

                    app:errorTextAppearance="@style/ErrorText"
                    >

                    <EditText
                        android:backgroundTint="@color/white"
                        android:id="@+id/user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:drawableRight="@drawable/email"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-light"
                        android:textColorHighlight="@color/colorAccent"
                        android:textColorHint="@color/white"

                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/user_username_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    android:textColorHint="@color/white"
                    app:errorTextAppearance="@style/ErrorText"
                    >

                    <EditText
                        android:backgroundTint="@color/white"
                        android:id="@+id/user_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:drawableRight="@drawable/gender_neutral_user"
                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />
                </android.support.design.widget.TextInputLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/user_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    app:errorTextAppearance="@style/ErrorText"
                    >

                    <EditText
                        android:backgroundTint="@color/white"
                        android:id="@+id/user_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />
                </android.support.design.widget.TextInputLayout>


            <ImageView
                android:id="@+id/user_visibility_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-28dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_visibility_off_white_24dp"
                />
</LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/user_phone_no_layout"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textColorHint="@color/white"
                    app:errorTextAppearance="@style/ErrorText"
                    >

                    <EditText
                        android:backgroundTint="@color/white"
                        android:id="@+id/user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone"
                        android:drawableRight="@drawable/phone"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottom_layout"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        android:id="@+id/bottom_text_querry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text="Don't have an account?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/bottom_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginLeft="16dp"
                        android:text="SIGN UP"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />
                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>
        </RelativeLayout>






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="24dp">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/user_login_fab"
                android:layout_width="@dimen/fab_size"
                android:layout_height="@dimen/fab_size"
                android:layout_centerHorizontal="true"


                android:src="@drawable/icon_arrow_right"/>

        </RelativeLayout>




    </android.support.v7.widget.LinearLayoutCompat>


</RelativeLayout>