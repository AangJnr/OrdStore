
<android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:layout_gravity="center"
    android:background="@color/color_dark_slide_intro"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <com.shop.ordstore.userClasses.AspectRatioImageView
                    android:id="@+id/exp_product_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    android:transitionName="productPhotoExpand"
                    android:adjustViewBounds="true"

                    />



            </LinearLayout>




            <ScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:padding="16dp"
                android:fillViewport="true"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info"
                            android:textColor="@color/text_black_87"
                            android:layout_centerVertical="true"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/exp_product_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Code"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="16dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:fontFamily="sans-serif"

                            />

                    </RelativeLayout>





                    <TextView
                        android:id="@+id/exp_product_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:textAlignment="inherit"
                        android:text="@string/ipsum"/>





                </LinearLayout>





            </ScrollView>


        </android.support.v7.widget.LinearLayoutCompat>



